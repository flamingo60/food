<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginEnd="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:id="@+id/cv_most_liked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="203dp"
        android:layout_height="134dp">

        <ImageView
            android:id="@+id/img"
            android:src="@drawable/banan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_most_liked"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/txt_name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Banana Bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintEnd_toEndOf="@id/cv_most_liked"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/cv_most_liked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ImageView
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>