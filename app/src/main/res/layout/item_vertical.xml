<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginBottom="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="24dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/img"
            android:src="@drawable/soooop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txt_desc"
        app:layout_constraintBottom_toBottomOf="@id/cv_img"
        app:layout_constraintTop_toTopOf="@id/cv_img"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@id/cv_img"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Special Diets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_name"
        app:layout_constraintBottom_toTopOf="@id/txt_desc"
        app:layout_constraintStart_toStartOf="@id/txt_desc"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Chicken Salad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txt_desc"
        app:layout_constraintEnd_toEndOf="@id/txt_name"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/txt_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ImageView
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:src="@drawable/star"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </LinearLayout>

    <TextView
        app:layout_constraintBottom_toTopOf="@id/txt_text_cooked"
        android:id="@+id/txt_cooked"

        app:layout_constraintStart_toStartOf="@id/txt_text_cooked"
        app:layout_constraintEnd_toEndOf="@id/txt_text_cooked"
        android:textSize="14sp"
        android:text="6.6K"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_text_cooked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:text="Cooked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>